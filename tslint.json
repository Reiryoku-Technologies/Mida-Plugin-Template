{
    "rules": {
        "array-type": [
            true,
            "array"
        ],
        "class-name": true,
        "curly": true,
        "cyclomatic-complexity": [
            true,
            10
        ],
        "deprecation": true,
        "encoding": true,
        "eofline": true,
        "interface-name": [
            true,
            "always-prefix"
        ],
        "max-classes-per-file": [
            true,
            10
        ],
        "member-access": true,
        "no-default-export": true,
        "no-duplicate-variable": true,
        "no-null-keyword": true,
        "no-parameter-reassignment": true,
        "no-return-await": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-var-keyword": true,
        "one-variable-per-declaration": [
            true,
            "ignore-for-loop"
        ],
        "prefer-const": true,
        "restrict-plus-operands": true,
        "semicolon": [
            true,
            "always"
        ],
        "space-before-function-paren": true,
        "static-this": true,
        "trailing-comma": [
            true,
            {
                "esSpecCompliant": true,
                "multiline": {
                    "arrays": "always",
                    "objects": "always"
                }
            }
        ],
        "triple-equals": true,
        "typedef": [
            true,
            "array-destructuring",
            "arrow-call-signature",
            "arrow-parameter",
            "call-signature",
            "member-variable-declaration",
            "parameter",
            "property-declaration",
            "variable-declaration"
        ],
        "unnecessary-else": [
            true,
            {
                "allow-else-if": true
            }
        ],
        "use-isnan": true
    }
}
